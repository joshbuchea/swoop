{
	"name": "Swoop!",
	"version": "1.0",
	"description": "Quickly search and navigate through your tabs using text.",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"manifest_version": 2,
	"background": {
		"scripts": ["event-page/fuse.min.js", "event-page/index.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content-script/styles.css"],
			"js": ["content-script/bin/app.js"]
		}
	],
	"permissions": ["tabs", "<all_urls>"],
	"browser_action": {
		"default_icon": "icon-128.png"
	},
	"commands": {
			"toggle": {
				"suggested_key": {
					"default": "Ctrl+M",
					"mac": "Command+K"
				},
				"description": "Toggle switcher UI"
			}
		}
}
